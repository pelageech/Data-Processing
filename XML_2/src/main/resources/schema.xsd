<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:cmp="http://ablaginin.nsu.ru"
            targetNamespace="http://ablaginin.nsu.ru">

    <xsd:complexType name="id-type">
        <xsd:attribute name="id" type="xsd:IDREF" use="required" />
    </xsd:complexType>

    <xsd:simpleType name="name-type">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="\w+\s\w+" />
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="gender-type">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="M" />
            <xsd:enumeration value="F" />
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:complexType name="parents-type">
        <xsd:sequence>
            <xsd:element name="parent-id"
                         type="cmp:id-type"
                         minOccurs="0" maxOccurs="2"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="children-type">
        <xsd:sequence>
            <xsd:element name="child-id"
                         type="cmp:id-type"
                         minOccurs="0" maxOccurs="unbounded"/>
        </xsd:sequence>
        <xsd:attribute name="count" type="xsd:integer" use="required"/>
    </xsd:complexType>

    <xsd:complexType name="siblings-type">
        <xsd:sequence>
            <xsd:element name="sibling-id"
                         type="cmp:id-type"
                         minOccurs="0" maxOccurs="unbounded"/>
        </xsd:sequence>
        <xsd:attribute name="count" type="xsd:integer" use="required"/>
    </xsd:complexType>

    <xsd:complexType name="person-type">
        <xsd:sequence>
            <xsd:element name="spouse" minOccurs="0" maxOccurs="1" type="cmp:id-type"/>
            <xsd:element name="parents" minOccurs="0" maxOccurs="1" type="cmp:parents-type"/>
            <xsd:element name="siblings" minOccurs="0" maxOccurs="1" type="cmp:siblings-type"/>
            <xsd:element name="children" minOccurs="0" maxOccurs="1" type="cmp:children-type"/>
        </xsd:sequence>
        <xsd:attribute name="id" type="xsd:ID" use="required"/>
        <xsd:attribute name="name"
                       type="cmp:name-type"
                       use="required"/>
        <xsd:attribute name="gender"
                       type="cmp:gender-type"
                       use="required"/>
    </xsd:complexType>

    <xsd:element name="people">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="person"
                             type="cmp:person-type"
                             minOccurs="0" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

</xsd:schema>